# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font pango:Terminus 11px

set $mod Mod4
####################################################################
# shortcuts
####################################################################


# terminals 
bindsym $mod+Return exec termite #i3-sensible-terminal
bindsym $mod+u exec urxvt 

# shortcuts to applications
bindsym $mod+r exec termite -e ranger
bindsym $mod+m exec termite -e cmus
bindsym $mod+y exec termite -e ~/set/second_screen_extend 
bindsym $mod+g exec gsimplecal
bindsym $mod+n exec nitrogen
bindsym $mod+t exec urxvt -e ~/set/theme


# start dmenu (a program launcher)
bindsym $mod+d exec rofi -show run -sidebar-mode 
#-lines 3 -eh 2 -width 100 -padding 800 -opacity "85" -bw 0 -bc "$bg-color" -bg "$bg-color" -fg "$text-color" -hlbg "$bg-color" -hlfg "#9575cd" -font "xos4 Terminus Regular 18"

