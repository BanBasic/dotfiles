##############
!# Xft settings
##############
Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle: hintslight
###################################

URxvt.depth:                32
URxvt.geometry:             90x30
!URxvt.loginShell:           true
URxvt.internalBorder:       3
URxvt.lineSpace: 0
URxvt.visualBell:false

! Scrollbar
URxvt.scrollStyle:    rxvt
URxvt.scrollBar:      false
!
URxvt*saveLines: 12000
!urxvt.background:     black
urxvt.foreground:     gray

urxvt*transparent: true
urxvt*shading: 4
!urxvt*tintColor: #000000
urxvt*blurRadius: 5

urxvt.font: xft:xos4 Terminus :pixelsize=16
urxvt.fontFont: xft:xos4 Terminus :pixelsize=16:weight=bold
!urxvt.font: xft:DejaVu Sans Mono:pixelsize=13
!urxvt.boldFont: xft:DejaVu Sans Mono:pixelsize=13:weight=bold
!URxvt.font:     xft:bitstream vera sans mono:size=11:antialias=true
URxvt*letterSpace: 0
URxvt.boldFont: xft:bitstream vera sans mono:bold:size=11:antialias=true

! to match gnome-terminal "Linux console" scheme
! foreground/background
URxvt*background: #000000
!URxvt*foreground: #ffffff
! black
URxvt.color0  : #000000
URxvt.color8  : #555555
! red
URxvt.color1  : #AA0000
URxvt.color9  : #FF5555
! green
URxvt.color2  : #00AA00
URxvt.color10 : #55FF55
! yellow
URxvt.color3  : #AA5500
URxvt.color11 : #FFFF55
! blue
URxvt.color4  : #0000AA
URxvt.color12 : #5555FF
! magenta
URxvt.color5  : #AA00AA
URxvt.color13 : #FF55FF
! cyan
URxvt.color6  : #00AAAA
URxvt.color14 : #55FFFF
! white
URxvt.color7  : #AAAAAA
URxvt.color15 : #FFFFFF

###################################
rofi.color-enabled: true
!                  bg       border   separator
rofi.color-window: #000000, #000000, #ffa500
! yellow #ffff00
! blue #009fff
!                  bg       fg       bg-alt   hl-bg    hl-fg
rofi.color-normal: #000000, #e0e0e0, #000000, #b6b6b6, #000000
rofi.color-active: #009fff, #ffffff, #000000, #b6b6b6, #e0e0e0
rofi.separator-style: solid
rofi.sidebar-mode: false
rofi.hide-scrollbar: true
rofi.bw: 1
rofi.columns: 1
rofi.padding: 10
rofi.yoffset: 0
rofi.fake-transparency: false
rofi.location: 0
rofi.width: 50
rofi.font: xos4 terminus regular 12
rofi.lines: 12
rofi.fixed-num-lines: true
